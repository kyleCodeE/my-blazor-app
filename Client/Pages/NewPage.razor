@page "/newpage"

<h1>IPO</h1>

<p>Input prompt</p>

Current grade: <br/><input @bind="InputString"/> <br/>
Assignment type weight: <br/> <input @bind="InputString"/> <br />
Assignment type total current points: <br /> <input @bind="InputString"/> <br />
Assignment points <br /> <input @bind="InputString"/> <br />
Expected grade: <br /> <input @bind="InputString"/>


<button class="btn btn-primary" @onclick="DoProcessing">Do it</button>

<p>Output: @OutputString</p>

@code
{
    private string InputString {get; set;}
    private string OutputString {get; set;}
    private void DoProcessing()

    {
        double num = double.Parse(InputString);
        num = num*2;
        OutputString = num.ToString();
    }
}
